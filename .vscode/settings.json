{
  "files.exclude": {
    "**/.gitignore": false,
    "**/.git": false,
    "**/.terraform": false,
    "**/.tfstate": false,
    "**/.npmrc": false,
    "**/dev/dvc-command": false,
    "**/.env.backup": false,
    "**/.dockerignore": false,
    "**/dvc-command": false,
    "**/gha**": false,
    "**/package-lock.json": false,
    "**/node_modules": false,
    "**/__pycache__": false,
    "**/.next": false,
    "**/dist": false,
    "**/.terraform.lock.hcl": false,
    "**/backend.tf": false,
    "**/versions.tf": false,
    "**/meta.json": false
  },
  "files.associations": {
    "*.json": "jsonc"
  },
  "Lua.diagnostics.globals": ["kong", "ngx"],
  "Lua.runtime.version": "LuaJIT",
  "Lua.workspace.library": ["${3rd}/OpenResty/library"],
  "Lua.workspace.checkThirdParty": false,
  "terminal.integrated.defaultProfile.linux": "zsh",
  "editor.formatOnSave": true,
  "files.autoSave": "off"
}
